<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="btn_icon">
        <item name="android:shadowColor">@color/btn_ic_shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
        <item name="android:padding">@dimen/ic_margin</item>
        <item name="android:textSize">@dimen/ic_size</item>
        <item name="android:textColor">@color/btn_ic</item>
        <item name="android:clickable">true</item>
        <item name="overridePressed">true</item>
        <item name="pressedGlowColor">@color/btn_ic_glow</item>
        <item name="pressedGlowRadius">25px</item>

    </style>

</resources>
